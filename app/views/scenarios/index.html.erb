<h1>Listing scenarios</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Given</th>
    <th>When</th>
    <th>And</th>
    <th>Then</th>
    <th>Variables</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scenarios.each do |scenario| %>
  <tr>
    <td><%= scenario.name %></td>
    <td><%= scenario.Given %></td>
    <td><%= scenario.When %></td>
    <td><%= scenario.And %></td>
    <td><%= scenario.Then %></td>
    <td><%= scenario.variables %></td>
    <td><%= link_to 'Show', scenario %></td>
    <td><%= link_to 'Edit', edit_scenario_path(scenario) %></td>
    <td><%= link_to 'Destroy', scenario, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

